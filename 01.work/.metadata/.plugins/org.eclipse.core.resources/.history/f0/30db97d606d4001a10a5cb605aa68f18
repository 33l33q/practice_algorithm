package practice;

import java.util.Scanner;

public class While {

	public static void main(String[] args){
		Scanner scan = new Scanner(System.in);
		
		int A = 0, B = 0;
		
		
		while(A + B != 0){

			System.out.println("두 정수를 입력하세요;");
			
			A = scan.nextInt();
			B = scan.nextInt();
			
			System.out.println(A + B);
			
		}
		
	}
}
