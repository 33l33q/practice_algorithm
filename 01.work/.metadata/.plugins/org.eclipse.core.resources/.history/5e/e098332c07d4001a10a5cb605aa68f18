package practice;

import java.util.Scanner;

public class While {

	public static void main(String[] args){
		Scanner scan = new Scanner(System.in);
		
		int sum = 10;
		
		while(sum != 0){

			int A = 0, B = 0;

			System.out.println("두 정수를 입력하세요;");
			
			A = scan.nextInt();
			B = scan.nextInt();

			sum =  A + B ;
			System.out.println(sum);
			
		}
		
	}
}
